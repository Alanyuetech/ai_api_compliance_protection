# Environment Variables for AI Content Filter
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# GitHub Personal Access Token
# Required for creating releases and pushing to GitHub
# Create one at: https://github.com/settings/tokens
# Permissions needed: repo (full control of private repositories)
GITHUB_TOKEN=ghp_your_token_here

# GitHub Repository Information
GITHUB_OWNER=Alanyuetech
GITHUB_REPO=ai_api_compliance_protection

# Release Version
VERSION=v1.0.0

# Optional: API Keys for testing with different LLM providers
# These are only needed if you want to test the filter with actual APIs
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Optional: Custom filter configuration path
FILTER_CONFIG_PATH=./filter.yaml

# Optional: Debug mode (true/false)
DEBUG=false